@page
@model IndexModel
@{
    ViewData["Title"] = "DataTables Usage Dynamically";
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({
                processing: true,                               //It will seem on the screen while processing
                serverSide: true,                               //Post DataTables Variables as a form
                ajax: {
                    url: "@Url.Action("Test", "DataTables")",   //json uri
                    type: "POST",
                    dataSrc: ""                                 //json object name to read or a plain array
                },
                columns: [                                      // or it can define that way: { data: 0 },
                    { data: 'id' },
                    { data: 'name' },
                    { data: 'surname' },
                    { data: 'email' },
                    { data: 'gender' },                         //let's say a salary in hr key, it can define that way: { data: 'hr.salary' },
                ]
            });
        });
    </script>
}

<p>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Row 1 Data 1</td>
                <td>Row 1 Data 2</td>
                <td>Row 1 Data 3</td>
                <td>Row 1 Data 4</td>
                <td>Row 1 Data 5</td>
            </tr>
            <tr>
                <td>Row 2 Data 1</td>
                <td>Row 2 Data 2</td>
                <td>Row 2 Data 3</td>
                <td>Row 2 Data 4</td>
                <td>Row 2 Data 5</td>
            </tr>
            <tr>
                <td>Row 3 Data 1</td>
                <td>Row 3 Data 2</td>
                <td>Row 3 Data 3</td>
                <td>Row 3 Data 4</td>
                <td>Row 3 Data 5</td>
            </tr>
            <tr>
                <td>Row 4 Data 1</td>
                <td>Row 4 Data 2</td>
                <td>Row 4 Data 3</td>
                <td>Row 4 Data 4</td>
                <td>Row 4 Data 5</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
            </tr>
        </tfoot>
    </table>
</p>
